@model vnLab.Data.Entities.TimeSheet

@{
    ViewData["Title"] = "Delete time sheet: " + Model.User!.FullName + " - " + (Model.LastDayOfMoth.HasValue ?
    Model.LastDayOfMoth.Value.ToString("dd/MM/yyyy") : "");
    ViewData["Heading"] = "Delete time sheet: " + Model.User.FullName + " - " + (Model.LastDayOfMoth.HasValue ?
    Model.LastDayOfMoth.Value.ToString("dd/MM/yyyy") : "");
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="TimeSheets" asp-action="Index">Time sheet</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete time sheet: @Model.User.FullName -
            @Model.LastDayOfMoth?.ToString("dd/MM/yyyy")</li>
    </ol>
</nav>

<label>Are you sure you want to delete this?</label>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastDayOfMoth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastDayOfMoth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TongNgayCong)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TongNgayCong)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NghiCoPhep)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NghiCoPhep)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NghiKhongPhep)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NghiKhongPhep)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User!.Email)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
