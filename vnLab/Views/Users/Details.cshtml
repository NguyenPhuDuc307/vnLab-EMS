@model vnLab.Data.Entities.User

@{
    ViewData["Title"] = "User infomation: " + Model.Email;
    ViewData["Heading"] = "User infomation: " + Model.Email;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Users" asp-action="Index">User</a></li>
        <li class="breadcrumb-item active" aria-current="page">User infomation: @Model.Email</li>
    </ol>
</nav>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sex)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Sex.HasValue)
            {
                if (Model.Sex.Value)
                {
                    @Html.Raw("Nam")
                }
                else
                {
                    @Html.Raw("Nữ")
                }
            }
            else
            {
                @Html.Raw("Không xác định")
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CCCD)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CCCD)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TDHV)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TDHV)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BHXH)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BHXH)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BHYT)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BHYT)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SoPhep)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoPhep)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position!.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Status.HasValue)
            {
                if (Model.Status.Value)
                {
                    <p class="text-success">
                        @Html.Raw("Đang làm việc")
                    </p>
                }
                else
                {
                    <p class="text-danger">
                        @Html.Raw("Dừng làm việc")
                    </p>
                }
            }
            else
            {
                @Html.Raw("Không xác định")
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
